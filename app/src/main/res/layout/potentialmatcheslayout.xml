<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewProfilePicture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewName"
        android:adjustViewBounds="true"
        android:maxHeight="42dp"
        android:maxWidth="42dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewName"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/imageViewProfilePicture"
        android:layout_toRightOf="@+id/imageViewProfilePicture"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewSkillLevel"
        android:layout_alignStart="@+id/textViewSkillLevel"
        android:layout_below="@+id/textViewSkillLevel"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewSkillLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewAvailability"
        android:layout_alignStart="@+id/textViewAvailability"
        android:layout_below="@+id/textViewAvailability"
        android:text="TextView"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewSkillLevel"
        android:layout_alignBottom="@+id/textViewSkillLevel"
        android:layout_toLeftOf="@+id/buttonViewProfile"
        android:layout_toStartOf="@+id/buttonViewProfile"
        android:text="Invite"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonInvite"
        android:layout_alignBottom="@+id/buttonInvite"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="View Profile"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>